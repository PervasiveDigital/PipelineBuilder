<UserControl x:Class="GraphCalc.SceneInput2D"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="226" Height="249" Background="White">
    <Grid>
		<StackPanel Orientation="Horizontal" Grid.Row="0" Name="Display">
			<TextBlock Height="20" VerticalAlignment="Top"> y=</TextBlock>
			<TextBox Width="150" Height="20" VerticalAlignment="Top" Name="Equation">x*sin(x^2)+x</TextBox>
			<Button Name="GraphIt" Height="20" VerticalAlignment="Top">Graph It</Button>
		</StackPanel>  		  
    </Grid>
</UserControl>
